<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Label?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="s25.cs151.application.MainController" spacing="10" style="-fx-background-color: khaki;" >
    <HBox alignment="BASELINE_CENTER" minWidth="950" minHeight="120" style="-fx-padding: 30 0 0 0;">
        <Label text="Main Menu" style="-fx-font-size: 64px; -fx-font-weight: bold; -fx-background-color: darkkhaki;"
               prefWidth="1000" prefHeight="220" alignment="CENTER"/>
    </HBox>

    <HBox spacing="120" alignment="CENTER" style="-fx-padding: 100 0 0 0;">
        <Button text="Office Hours" onAction="#onOfficeHoursButtonClick" prefWidth="120"/>
        <Button text="New Hours" onAction="#onNewHoursButtonClick" prefWidth="120"/>
        <Button text="New Course" onAction="#onNewCourseButtonClick" prefWidth="120"/>
        <Button text="New Appointment" onAction="#onNewAppointmentButtonClick" prefWidth="120"/>
        <Button text="Update" onAction="#onUpdateButtonClick" prefWidth="120"/>
    </HBox>

    <HBox spacing="191" alignment="TOP_CENTER">
        <ImageView fitHeight="50" fitWidth="50">
            <Image url="OfficeHoursIcon.png" />
        </ImageView>
        <ImageView fitHeight="50" fitWidth="50">
            <Image url="clock.png" />
        </ImageView>
        <ImageView fitHeight="50" fitWidth="50">
            <Image url="document.png" />
        </ImageView>
        <ImageView fitHeight="50" fitWidth="50">
            <Image url="calendar.png" />
        </ImageView>
        <ImageView fitHeight="45" fitWidth="45">
            <Image url="edit.png" />
        </ImageView>
    </HBox>

        <!-- DatePicker will be added via controller -->
    <VBox spacing="90" alignment="CENTER" style="-fx-padding: 100 0 0 0;">
        <Button text="Search Appointments" prefWidth="130"/>
        <Button text="Daily Report (PDF)" prefWidth="130"/>
    </VBox>

    <HBox alignment="BASELINE_RIGHT">
        <VBox>
            <!-- Datepicker here -->
        </VBox>
        <VBox style="-fx-padding: 0 30 0 0;">
            <Label text="Office" style="-fx-font-size: 25px; -fx-font-family: Arial;"/>
            <Label text="Hero" style="-fx-font-size: 25px; -fx-font-family: Arial; -fx-padding: -5 0 0 25;"/>
            <ImageView fitHeight="75" fitWidth="75">
                <Image url="OfficeManagerLogo.png" />
            </ImageView>
        </VBox>
    </HBox>

</VBox>
